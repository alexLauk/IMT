extends layout

block content
    h1 All courses of Academy

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", id="name", type="text", placeholder="Enter name of course")
            small.text-muted Add your new course
        button.btn.btn-primary(type='submit') Create course
        a.btn.btn-default(href="/courses") Cancel
