doctype html
html(lang='ru')
    head
        meta(charset='UTF-8')
        meta(http-equiv='x-ua-compatible', content='IE-edge')
        meta(name='viewport', content='width-device-width, initial-scale-1')
        title= title
        link(rel='stylesheet', href='/css/bootstrap.min.css' )
        link(rel='stylesheet', href='/style.css')
    body
        nav.navbar.navbar-default.navbar-static-top
           .container
               .navbar-header
                   button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                       span.sr-only Toggle navigation
                       span.icon-bar
                       span.icon-bar
                       span.icon-bar
                   a.navbar-brand(href='/') My App
               #navbar.navbar-collapse.collapse
                   ul.nav.navbar-nav
                       li(class=(title == 'Home') ? 'active' : null)
                           a(href='/') Home
                       li(class=(title == 'About') ? 'active' : null)
                           a(href='/courses') Courses
                   ul.nav.navbar-nav.navbar-right
                       if user
                           li.dropdown
                               a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
                                   span #{user.name || user.email} &nbsp;
                                   i.caret
                               ul.dropdown-menu
                                   li
                                       a(href='/profile') Profile
                                   li.divider(role='separator')
                                   li
                                       a(href='/logout') Logout
                       else
                           li(class=(title == 'Log in') ? 'active' : null)
                               a(href='/login') Log-in
                           li(class=(title == 'Register') ? 'active' : null)
                               a(href='/register') Register
        .container
            .main-content
                    block content
