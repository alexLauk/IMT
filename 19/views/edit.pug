extends layout

block content
    h1 All Academy Courses

    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", type="text", id="name", placeholder="Enter name of course", value=course.name)
            small.text-muted Add your new course
        button.btn.btn-primary(type='submit') Save course
        a.btn.btn-defoult(href="/courses") Cancel
